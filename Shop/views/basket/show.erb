<h1>My basket</h1>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% basket.list_of_basket_records.each do |basket_record| %>
      <tr>
        <td><%= basket_record.product_name %></td>
        <td><%= '%.2f' % basket_record.value_brutto %></td>
        <td><%= basket_record.quantity %></td>
        <td><%= '%.2f' % basket_record.sum_brutto %></td>
        <td>
          <form action="/basket" method="post">
            <input name="_method" value="put" type="hidden"/>
            <input type="hidden" name="product_id" value=<%= basket_record.product_id %>>
            <input class="btn btn-default btn-sm" type="submit" value="Delete">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td><strong>Summary:</strong></td>
      <td><%= '%.2f' % basket.sum_brutto %></td>
      <td></td>
    </tr>
  </tfoot>
</table>
